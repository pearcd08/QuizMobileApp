<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ADD8E6"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".UpdateQuizActivity">


    <TextView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Update-a-Quiz"
        android:textSize="36sp"
        android:textStyle="bold" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20sp"
        android:text="Update Quiz Name:"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/txt_updatequiz_quizname"
        android:layout_width="match_parent"
        android:layout_height="30sp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:background="@color/white"
        android:textSize="18sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20sp"
        android:text="Update Quiz Duration"
        android:textSize="18sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_updatequiz_startdate"
            android:layout_width="100sp"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:text="Start Date"
            android:textSize="18sp" />.

        <ImageButton
            android:id="@+id/btn_updatequiz_startdate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="25dp"
            android:backgroundTint="#0000"
            android:src="@drawable/ic_calender" />

        <TextView
            android:id="@+id/tv_updatequiz_enddate"
            android:layout_width="100sp"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:text="End Date"
            android:textSize="18sp" />.

        <ImageButton
            android:id="@+id/btn_updatequiz_enddate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#0000"
            android:src="@drawable/ic_calender" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="50sp">
        <Button
            android:id="@+id/btn_updatequiz_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="CANCEL"
            android:textSize="18sp"
            android:layout_marginRight="20sp"/>

        <Button
            android:id="@+id/btn_updatequiz_update"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:gravity="center"
            android:text="UPDATE"
            android:textSize="18sp" />

        <Button
            android:id="@+id/btn_updatequiz_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:gravity="center"
            android:text="DELETE"
            android:textSize="18sp"
            android:layout_marginLeft="20sp"/>


    </LinearLayout>



</LinearLayout>