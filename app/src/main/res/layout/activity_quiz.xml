<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".PlayQuizActivity">

    <TextView
        android:id="@+id/tv_quiz_question"
        android:layout_width="350sp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:layout_marginBottom="10sp"
        android:gravity="center"
        android:text="Loading Question..."
        android:textSize="16sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btn_quiz_option1"
        android:layout_width="350sp"
        android:layout_height="60sp"
        android:layout_marginBottom="10sp"
        android:text="ANSWER 1" />

    <Button
        android:id="@+id/btn_quiz_option2"
        android:layout_width="350sp"
        android:layout_height="60sp"
        android:layout_marginBottom="10sp"
        android:text="ANSWER 1" />


    <Button
        android:id="@+id/btn_quiz_option3"
        android:layout_width="350sp"
        android:layout_height="60sp"
        android:layout_marginBottom="10sp"
        android:text="ANSWER 1" />


    <Button
        android:id="@+id/btn_quiz_option4"
        android:layout_width="350sp"
        android:layout_height="60sp"
        android:layout_marginBottom="10sp"
        android:text="ANSWER 1" />



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Time: "
            android:textSize="20sp" />

        <Chronometer

            android:id="@+id/timer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="120sp"
            android:textSize="20sp" />


        <TextView
            android:id="@+id/tv_quiz_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Score: 0/0"
            android:textSize="20sp" />


    </LinearLayout>

    <Button
        android:id="@+id/btn_quiz_next"
        android:layout_width="175sp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10sp"
        android:text="NEXT QUESTION" />


</LinearLayout>